@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="card-header border-0">
    <h3 class="mb-0">Deneyim Ekleme Sayfasi</h3>
</div>
@using (Html.BeginForm("AddExperience", "Experience", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Yeni Deneyim Ekleme </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label >Baslik</label>
                        <input type="text" class="form-control" name="Name">
                    </div>
                    <div class="form-group">
                        <label>Tarih address</label>
                        <input type="text" class="form-control" name="Date"  >
                    </div>
                    <div class="form-group">
                        <label >Gorsel Url</label>
                        <input type="text" class="form-control" name="ImageUrl"  >
                    </div>
                    <div class="form-group">
                        <label >Aciklama</label>
                        <input type="text" class="form-control" rows="6" name="Description" >
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">Iptal</button>
                </form>
            </div>
        </div>
    </div>
}
