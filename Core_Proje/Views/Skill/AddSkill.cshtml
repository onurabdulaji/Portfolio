@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
@model EntityLayer.Concrete.Skill

<div class="card-header border-0">
    <h3 class="mb-0">Deneyim Ekleme Sayfasi</h3>
</div>

@using (Html.BeginForm("AddSkill", "Skill", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Yeni Deneyim Ekleme </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Baslik</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Deger</label>
                        @Html.TextBoxFor(x => x.Value, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">Iptal</button>
                </form>
            </div>
        </div>
    </div>
}