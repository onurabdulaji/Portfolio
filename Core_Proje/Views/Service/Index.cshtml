
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<h1>Index</h1>


@using EntityLayer.Concrete
@model List<Service>

<div class="card-header border-0">
    <h3 class="mb-0">Hizmet Listesi Tablosu</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Baslik</th>
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Duzenle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.ServiceID
                    </td>
                    <th class="budget">
                        @item.Title
                    </th>
                    <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Service/EditService/@item.ServiceID" class="btn btn-success">Guncelle</a></td>
                </tr>
            }

        </tbody>
    </table>
    <a href="/Service/AddService/" class="btn btn-primary">Yeni Hizmet Ekle</a>
</div>
